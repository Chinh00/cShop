{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "identityserver": {
        "ClusterId": "identityserver",
        "Match": {
          "Path": "/identityserver/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/identityserver"
          },
          {
            "PathPrefix": "/"
          }
        ]
        
      },
      "catalogservice": {
        "ClusterId": "catalogservice",
        "Match": {
          "Path": "/catalogservice/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/catalogservice"
          },
          {
            "PathPrefix": "/"
          }
        ]
        
      },
      "basketservice": {
        "ClusterId": "basketservice",
        "Match": {
          "Path": "/basketservice/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/basketservice"
          },
          {
            "PathPrefix": "/"
          }
        ]
        
      },
      "orderservice": {
        "ClusterId": "orderservice",
        "Match": {
          "Path": "/orderservice/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/orderservice"
          },
          {
            "PathPrefix": "/"
          }
        ]
      }
    },
    "Clusters": {
      "orderservice": {
        "ClusterId": "orderservice",
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004"
          }
        }
      },
      "identityserver": {
        "ClusterId": "identityserver",
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5555"
          }
        }
      },
      "catalogservice": {
        "ClusterId": "catalogservice",
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7000"
          }
        }
      },
      "basketservice": {
        "ClusterId": "basketservice",
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5122"
          }
        }
      }
    }
  }
}
